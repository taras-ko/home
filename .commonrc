pm() # pmount
{
	if [[ -n $1 ]]; then
		pmount $1
		export STICK=$1
	fi
}

pu() # pumount
{
	local target
	if [[ -n $1 ]]; then
		target=$1
	elif [[ -n $STICK ]]; then
		target=$STICK
	else
		echo "Error: couldn't find."
		return
	fi

	pumount $target
}
