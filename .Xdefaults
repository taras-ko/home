! General
xft.dpi : 	96
urxvt*termNam: rxvt-256color
urxvt*loginShell:         true
urxvt*scrollBar:         false
urxvt*secondaryScroll:    true
urxvt*saveLines:         65535
urxvt*urgentOnBell:       true
urxvt*override-redirect:false 
urxvt*borderLess:       false
urxvt*internalBorder:       0
urxvt*externalBorder:       0
urxvt.cursorBlink:		true
urxvt.depth:	32
!urxvt.background: rgba:0000/0000/0000/1111

! Extensions

urxvt*perl-lib:        /usr/lib/urxvt/perl/
urxvt*perl-ext-common: default,readline,matcher,searchable-scrollback
urxvt*urlLauncher:     surf
urxvt*matcher.button:  1
!  - catch ugly URLs
urxvt.cutchars:        `()'*<>[]{|}"
! Xcursor
Xcursor*theme: Adwaita
Xcursor.size: 16

! Appearance
!  - use a bitmap font
!urxvt*font: -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-r
!urxvt*boldFont:    -*-terminus-bold-r-*-*-16-*-*-*-*-*-*-r
!urxvt*font:        -xos4-terminus-r-*-*-*-12-*-*-*-*-*-*-*
!urxvt*boldFont:    -*-terminus-*-*-*-12-*-*-*-*-*-*-*-*

!  - use xft for drawing fonts

urxvt*font:       xft:Terminus:pixelsize=19:style=bold
urxvt*boldfont:       xft:Terminus:pixelsize=19:style=bold
!urxvt*font:       xft:Dina:pixelsize=19
!  - cursokr
urxvt*cursorColor: #DCDCCC
!urxvt*cursorColor: darkblue
!  - pseudo transparency
!urxvt*transparent:true
!urxvt.shading:   99 
!
!  - color scheme
urxvt*foreground: #f2f2f2
urxvt*background: #101010
!urxvt*color0:    #6c6c6c
!urxvt*color1:    #e9897c
!urxvt*color2:    #b6e77d
!urxvt*color3:    #ecebbe
!urxvt*color4:    #a9cdeb
!urxvt*color5:    #ea96eb
!urxvt*color6:    #c9caec
!urxvt*color7:    #f2f2f2
!urxvt*color8:    #747474
!urxvt*color9:    #f99286
!urxvt*color10:    #c3f786
!urxvt*color11:    #fcfbcc
!urxvt*color12:    #b6defb
!urxvt*color13:    #fba1fb
!urxvt*color14:    #d7d9fc
!urxvt*color15:    #e2e2e2
!urxvt.background:  #000000
!urxvt.foreground:  #EBEBFF
! black + red
!urxvt*color0:     #3f3f3f
urxvt*color0:      #000000
urxvt*color1:      #e01010
! green + yellow
urxvt*color2:      #00AA00
urxvt*color3:      #FFFF00
! blue + purple
urxvt*color4:      #112037
urxvt*color5:      #A020F0
! cyan + white
urxvt*color6:      #5B5BC7
urxvt*color7:      #fefefe
! bright-black + bright-red
urxvt*color8:      #6a6a6a
urxvt*color9:      #FF5555
! bright-green + bright-yellow
urxvt*color10:     #90EE90
urxvt*color11:     #ffff2f
! bright-blue + bright-purple
urxvt*color12:     #5B5BC7
urxvt*color13:     #e628ba
! bright-cyan + bright-white
urxvt*color14:     #7D7DFB
urxvt*color15:     #ffffff

!URxvt.keysym.C-1: command:\033]710;xft:Terminus:style=bold:pixelsize=10\007
URxvt.keysym.C-1: command:\033]710;xft:Terminus:style=normal:pixelsize=16\007
URxvt.keysym.C-2: command:\033]710;xft:Terminus:style=bold:pixelsize=19\007
URxvt.keysym.C-3: command:\033]710;xft:Terminus:style=bold:pixelsize=28\007
URxvt.keysym.C-4: command:\033]710;xft:Terminus:style=normal:pixelsize=56\007
!URxvt.keysym.C-4: command:\033]710;xft:Terminus:style=bold:pixelsize=23\007
!URxvt.keysym.C-5: command:\033]710;xft:Terminus:style=bold:pixelsize=24\007

urxvt.keysym.C-7: command: \033]49;rgba:0000/0000/0000/3333\007
urxvt.keysym.C-8: command: \033]49;rgba:0000/0000/0000/6666\007
urxvt.keysym.C-9: command: \033]49;rgba:0000/0000/0000/aaaa\007
urxvt.keysym.C-0: command: \033]49;rgba:0000/0000/0000/ffff\007

URxvt.print-pipe: cat >$(TMPDIR=$HOME mktemp urxvt.XXXXXX)

! make use Alt key in Vim
!URxvt*meta8: true
